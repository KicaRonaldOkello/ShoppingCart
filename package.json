{
  "name": "shopping_cart",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/KicaRonaldOkello/ShoppingCart.git",
  "author": "KicaRonaldOkello <okello.ronald@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon ./bin/index.js",
    "test": "jest"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.8.7"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "sequelize-cli": "^5.4.0"
  },
    "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/__tests__/**/*.js?(x)"
    ],
      "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/src/**/?(*.)(spec|test).js",
      "<rootDir>/integrations/**/?(*.)(spec|test).js"
      ],
      "coveragePathIgnorePatterns": [
      "<rootDir>/src/database/migrations",
      "<rootDir>/src/database/seeders",
      "<rootDir>/src/database/models/index.js",
      "<rootDir>/src/middlewares/index.js"
    ],
    "testEnvironment": "node"
  }
}
