{
  "name": "shopping_cart",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/KicaRonaldOkello/ShoppingCart.git",
  "author": "KicaRonaldOkello <okello.ronald@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "10.14.2",
    "yarn": "1.13.0"
  },
  "scripts": {
    "start:dev": "NODE_ENV=development  DEBUG=log nodemon --exec babel-node ./bin/index.js",
    "lint": "node_modules/.bin/eslint ./src",
    "test": "jest --detectOpenHandles --runInBand --forceExit --collect-coverage"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-session": "^1.16.1",
    "global": "^4.4.0",
    "googleapis": "^40.0.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "sequelize": "^5.8.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "babel-eslint": "^8.2.6",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "sequelize-cli": "^5.4.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/__tests__/**/*.js?(x)",
      "!src/modules/**/index.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/?(*.)(spec|test)js",
      "<rootDir>/src/**/?(*.)(spec|test).js",
      "<rootDir>/integrations/**/?(*.)(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/database/migrations",
      "<rootDir>/src/database/seeders",
      "<rootDir>/src/database/models/index.js",
      "<rootDir>/src/modules/index.js"
    ],
    "testEnvironment": "node"
  }
}
